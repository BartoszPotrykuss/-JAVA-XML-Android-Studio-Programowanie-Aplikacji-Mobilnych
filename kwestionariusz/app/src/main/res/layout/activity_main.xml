<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Podaj imię i nazwisko: " />

    <EditText
        android:id="@+id/dane"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wybierz swój ulubiony napój: "
        android:background="#31F33A"
        android:textSize="15dp"/>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/sokPomaranczowy"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="sok pomarańczowy"
            />

        <RadioButton
            android:id="@+id/wodaNiegazowana"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="woda niegazowana" />

        <RadioButton
            android:id="@+id/energetyk"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="energetyk" />

        <RadioButton
            android:id="@+id/herbata"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="herbata" />
    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="W jaki sposób spędzasz czas wolny? "
        android:background="#31F33A"
        android:textSize="15dp"/>

    <CheckBox
        android:id="@+id/przyjaciele"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="spotykam się z przyjaciółmi" />

    <CheckBox
        android:id="@+id/ksiazka"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="czyta ksiazke" />

    <CheckBox
        android:id="@+id/gry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="gram w gry" />

    <CheckBox
        android:id="@+id/sport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="uprawiam sport" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
    <Button
        android:id="@+id/wyslij"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Wyślij" />

    <Button
        android:id="@+id/wyczysc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Wyczysc" />

    </LinearLayout>
    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="15dp"/>
</LinearLayout>